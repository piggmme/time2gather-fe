---
import Layout from '../../layouts/Layout.astro'
import KakaoLogin from '../../components/Login/KakaoLogin'
import GoogleLogin from '../../components/Login/GoogleLogin'
import { getLocaleFromAstroRequest, getTranslations, defaultLocale } from '../../i18n'

const locale = getLocaleFromAstroRequest(Astro.cookies, Astro.request.headers) || defaultLocale
const t = getTranslations(locale);

const title = t('meta.pages.login.title');
const description = t('meta.pages.login.description');
---

<Layout title={title} description={description} schemaType="WebPage">
  <main>
    <h1>{t('login.title')}</h1>
    <p>{t('login.description')}</p>
    <div class="login-buttons">
      <KakaoLogin client:only='react' />
      <GoogleLogin client:only='react' />
    </div>
  </main>
</Layout>

<style>
  main {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }
  h1 {
    margin-bottom: 50px;
  }
  p {
    margin-bottom: 20px;
    word-break: keep-all;
  }
  .login-buttons {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
</style>
