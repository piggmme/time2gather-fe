---
import Layout from '../../../layouts/Layout.astro';
import { getLocaleFromAstroRequest, getTranslations, defaultLocale } from '../../../i18n';
import { meetings } from '../../../services/meetings';
import type { get_meetings_$meetingCode_response } from '../../../services/meetings';
import Avatar from '../../../components/Avatar/Avatar';
import SelectedDates from '../../../components/meetings/SelectedDates';
import Button from '../../../components/Button/Button';
import ShareButton from '../../../components/meetings/ShareButton';
import MeetingButtons from '../../../components/meetings/MeetingButtons';

const locale = getLocaleFromAstroRequest(Astro.cookies, Astro.request.headers) || defaultLocale;
const t = getTranslations(locale);

const meetingCode = Astro.params.meetingCode as string;
let data: get_meetings_$meetingCode_response['data'] | null = null;
try {
  const response = await meetings.$meetingCode.get(meetingCode);
  data = response.data;
} catch (error) {
  return Astro.redirect('/404',);
}

// SEO 메타데이터 설정
const siteUrl = Astro.site?.href || 'https://time2gather.org/';
const meetingUrl = new URL(Astro.url.pathname, siteUrl).href;
const meetingTitle = `${data.meeting.title} - Time2Gather`;
const meetingDescription = data.meeting.description || t('meta.siteDescription');
const ogImage = new URL('/og-image.svg', siteUrl).href;

// Event 구조화된 데이터
const eventData = {
  name: data.meeting.title,
  description: data.meeting.description,
};
---
<Layout
  title={meetingTitle}
  description={meetingDescription}
  ogImage={ogImage}
  ogType="website"
  schemaType="Event"
  eventData={eventData}
>
  <main>
    <h1>{data.meeting.title}</h1>
    <p>{data.meeting.description}</p>
    <div class="host">
      <Avatar
        client:only="react"
        src={data.meeting.host.profileImageUrl}
        name={data.meeting.host.username}
      />
      <span>{data.meeting.host.username}</span>
    </div>
    <!-- <div class="separator" /> -->
     <div class="selected-dates">
      <SelectedDates
        client:only="react"
        dates={Object.keys(data.meeting.availableDates)}
        locale={locale}
        visibleCount={5}
      />
    </div>
    <div class="selected-dates-info">
      {
        data.participants.length === 0 ?
        <p>{t('meeting.participantsEmpty')}</p> :
        <p>{t('meeting.participantsCount', { count: data.participants.length })}</p>
      }
      <p>
        {
          data.meeting.selectionType === 'ALL_DAY'
          ? t('meeting.selectedDates', { count: Object.keys(data.meeting.availableDates).length })
          : t('meeting.selectedDatesAndTimes', { count: Object.keys(data.meeting.availableDates).length })
        }
      </p>
    </div>
    <div class="button-container">
      <MeetingButtons client:only="react" data={data} />
    </div>
    <ShareButton client:only="react" />
  </main>
</Layout>

<style lang="scss">
  @use "../../../styles/variables.scss" as *;
  p {
    word-break: keep-all;
    color: $c-black;
  }
  main {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
    padding-bottom: 80px;
  }

  .host {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .separator {
    width: 100%;
    height: 1px;
    background-color: $c-gray;
    margin: 20px 0 30px;
  }

  .monthly-selection {
    margin-top: 30px;
    max-width: 300px;
  }

  .selected-dates-info {
    margin-top: 30px;
    p {
      margin: 6px 0;
    }
  }

  .selected-dates {
    margin-top: 30px;
  }

  .button-container {
    margin: 50px 0;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
</style>