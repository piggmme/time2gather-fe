---
import Layout from '../../../layouts/Layout.astro';
import { getLocaleFromAstroRequest, getTranslations, defaultLocale } from '../../../i18n';
import { meetings } from '../../../services/meetings';
import type { get_meetings_$meetingCode_response } from '../../../services/meetings';
import Avatar from '../../../components/Avatar/Avatar';
import MonthlySelection from '../../../components/Selection/MonthlySelection';
import SelectedDates from '../../../components/meetings/SelectedDates';
import Button from '../../../components/Button/Button';

const locale = getLocaleFromAstroRequest(Astro.cookies, Astro.request.headers) || defaultLocale;
const t = getTranslations(locale);

const meetingCode = Astro.params.meetingCode as string;
let data: get_meetings_$meetingCode_response['data'] | null = null;
try {
  const response = await meetings.$meetingCode.get(meetingCode);
  data = response.data;
} catch (error) {
  return Astro.redirect('/404',);
}

// SEO 메타데이터 설정
const siteUrl = Astro.site?.href || new URL(Astro.url.pathname, Astro.url.origin).href;
const meetingUrl = new URL(Astro.url.pathname, Astro.url.origin).href;
const meetingTitle = `${data.meeting.title} - Time2Gather`;
const meetingDescription = data.meeting.description || t('meta.siteDescription');
const ogImage = data.meeting.host.profileImageUrl || new URL('/favicon.svg', siteUrl).href;

// 구조화된 데이터 (JSON-LD)
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Event",
  "name": data.meeting.title,
  "description": data.meeting.description,
  "organizer": {
    "@type": "Person",
    "name": data.meeting.host.username,
    "image": data.meeting.host.profileImageUrl
  },
  "url": meetingUrl,
  "eventStatus": "https://schema.org/EventScheduled",
  "eventAttendanceMode": "https://schema.org/OnlineEventAttendanceMode"
};
---
<Layout
  title={meetingTitle}
  description={meetingDescription}
  ogImage={ogImage}
  ogType="website"
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} slot="head" />
  <main>
    <h1>{data.meeting.title}</h1>
    <p>{data.meeting.description}</p>
    <div class="host">
      <Avatar
        client:only="react"
        src={data.meeting.host.profileImageUrl}
        name={data.meeting.host.username}
      />
      <span>{data.meeting.host.username}</span>
    </div>
    <!-- <div class="separator" /> -->
     <div class="selected-dates">
      <SelectedDates
        client:only="react"
        dates={Object.keys(data.meeting.availableDates)}
        locale={locale}
        visibleCount={5}
      />
      <p class="selected-dates-title">{t('meeting.selectedDates', { count: Object.keys(data.meeting.availableDates).length })}</p>
    </div>
    <div class="button-container">
      <Button
        as='a'
        href={`/meetings/${meetingCode}/select`}
        buttonType="primary"
      >
        시간 선택하러 가기
      </Button>
    </div>
    <!-- <div class="monthly-selection">
      <MonthlySelection
        client:only="react"
        data={data}
      />
    </div> -->
  </main>
</Layout>

<style lang="scss">
  @use "../../../styles/variables.scss" as *;
  p {
    word-break: keep-all;
    color: $c-black;
  }
  main {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  .host {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .separator {
    width: 100%;
    height: 1px;
    background-color: $c-gray;
    margin: 20px 0 30px;
  }

  .monthly-selection {
    margin-top: 30px;
    max-width: 300px;
  }

  .selected-dates {
    margin-top: 30px;
  }

  .button-container {
    margin: 50px 0;
  }
</style>