---
import Layout from '../../../layouts/Layout.astro';
import { getLocaleFromAstroRequest, getTranslations, defaultLocale } from '../../../i18n';
import { meetings } from '../../../services/meetings';
import type { get_meetings_$meetingCode_report_response, get_meetings_$meetingCode_response } from '../../../services/meetings';
import Avatar from '../../../components/Avatar/Avatar';
import ResultButtons from '../../../components/ResultPage/ResultButtons';
import ResultContent from '../../../components/ResultPage/ResultContent';

const locale = getLocaleFromAstroRequest(Astro.cookies, Astro.request.headers) || defaultLocale;
const t = getTranslations(locale);

const meetingCode = Astro.params.meetingCode as string;
let meetingData: get_meetings_$meetingCode_response['data'] | null = null;
try {
  const response = await meetings.$meetingCode.get(meetingCode);
  meetingData = response.data;
} catch (error) {
  return Astro.redirect('/404',);
}

let reportData: get_meetings_$meetingCode_report_response['data'] | null = null;
try {
  const response = await meetings.$meetingCode.report.get(meetingCode);
  reportData = response.data;
} catch (error) {
  return Astro.redirect('/404',);
}

// SEO 메타데이터 설정
const siteUrl = Astro.site?.href || 'https://time2gather.org/';
const meetingUrl = new URL(Astro.url.pathname, siteUrl).href;
const meetingTitle = `${meetingData.meeting.title} 결과 - Time2Gather`;
const meetingDescription = reportData?.summaryText || meetingData.meeting.description || t('meta.siteDescription');
const ogImage = new URL('/og-image.svg', siteUrl).href;

// Event 구조화된 데이터
const eventData = {
  name: meetingData.meeting.title,
  description: reportData?.summaryText || meetingData.meeting.description,
};
---
<Layout
  title={meetingTitle}
  description={meetingDescription}
  ogImage={ogImage}
  ogType="website"
  schemaType="Event"
  eventData={eventData}
>
  <main>
    <h1>
      <a href={`/meetings/${meetingCode}`}>{meetingData.meeting.title}</a>
    </h1>
    <p>{meetingData.meeting.description}</p>
    <div class="host">
      <Avatar
        client:only="react"
        src={meetingData.meeting.host.profileImageUrl}
        name={meetingData.meeting.host.username}
      />
      <span>{meetingData.meeting.host.username}</span>
    </div>
    <div class="report">
      <ResultContent
        client:only="react"
        meetingData={meetingData}
        reportData={reportData}
      />
    </div>
    <div class="button-container">
      <ResultButtons
       client:only="react"
       data={meetingData}
      />
    </div>
  </main>
</Layout>

<style lang="scss">
  @use "../../../styles/variables.scss" as *;
  p {
    word-break: keep-all;
    color: $c-black;
  }
  main {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  .host {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .separator {
    width: 100%;
    height: 1px;
    background-color: $c-gray;
    margin: 20px 0 30px;
  }

  .report {
    margin-top: 30px;
  }

  .button-container {
    margin: 50px 0;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
</style>