---
import { ClientRouter } from 'astro:transitions'
import '../styles/global.scss';
import Header from '../components/Header/Header';

const siteUrl = Astro.site?.href || new URL(Astro.url.pathname, Astro.url.origin).href;
const title = 'Time2Gather - 사람들과 약속 잡기';
const description = '사람들과 약속을 쉽게 잡을 수 있는 서비스입니다. 약속을 생성하고, 여러 날짜와 시간대를 선택해 공유하세요. 참여자들이 가능한 시간을 선택하면 가장 만나기 좋은 날짜와 시간을 추천해드립니다.';
const keywords = '약속 잡기, 일정 조율, 모임 일정, 그룹 일정, 시간 조율, 약속 관리, 일정 공유, Time2Gather';
// const ogImage = new URL('/og-image.png', siteUrl).href;
---
<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Time2Gather" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={siteUrl} />

    <!-- Open Graph / Facebook / 카카오톡 -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <!-- <meta property="og:image" content={ogImage} /> -->
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Time2Gather - 여러 사람과 약속 잡기" />
    <meta property="og:locale" content="ko_KR" />
    <meta property="og:site_name" content="Time2Gather" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <!-- <meta name="twitter:image" content={ogImage} /> -->

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@100..900&display=swap" rel="stylesheet" />
    <ClientRouter />
  </head>
  <body>
	<Header client:only="react" />
	<div class="responsive-layout">
	  <slot />
	</div>
  </body>
</html>

<style>
	/* CSS Reset */
	*,
	*::before,
	*::after {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	html {
		-webkit-text-size-adjust: 100%;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	html,
	body {
		width: 100%;
		/* height: 100%; */
		font-family: "Noto Sans KR", sans-serif;
		font-optical-sizing: auto;
		font-style: normal;
	}

	body {
		line-height: 1.5;
	}

	img,
	picture,
	video,
	canvas,
	svg {
		display: block;
		max-width: 100%;
	}

	input,
	button,
	textarea,
	select {
		font: inherit;
	}

	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		overflow-wrap: break-word;
	}

	ul,
	ol {
		list-style: none;
	}

	a {
		text-decoration: none;
		color: inherit;
	}

	button {
		background: none;
		border: none;
		cursor: pointer;
	}

	table {
		border-collapse: collapse;
		border-spacing: 0;
	}

	.responsive-layout {
		width: 100%;
		min-width: 320px;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 12px;
		padding-top: 50px;

		@media (min-width: 700px) {
			padding-top: 0;
		}
	}
</style>
