---
import { ClientRouter } from 'astro:transitions'
import '../styles/global.scss';
import Header from '../components/Header/Header';
import ChatBot from '../components/ChatBot/ChatBot';
import { getLocaleFromAstroRequest, getTranslations, defaultLocale } from '../i18n';
import Toast from '../components/Toast/Toast';
import StructuredData from '../components/SEO/StructuredData.astro';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
  schemaType?: 'WebApplication' | 'Organization' | 'Event' | 'WebPage';
  eventData?: {
    name: string;
    description?: string;
    startDate?: string;
    endDate?: string;
    location?: string;
  };
}

const {
  title: customTitle,
  description: customDescription,
  ogImage: customOgImage,
  ogType = 'website',
  schemaType = 'WebApplication',
  eventData
} = Astro.props;

const locale = getLocaleFromAstroRequest(Astro.cookies, Astro.request.headers) || defaultLocale;
const t = getTranslations(locale);

const siteUrl = Astro.site?.href || 'https://time2gather.org/';
const currentUrl = new URL(Astro.url.pathname, siteUrl).href;
const currentPath = Astro.url.pathname;
const title = customTitle || t('meta.siteTitle');
const description = customDescription || t('meta.siteDescription');
const keywords = t('meta.siteKeywords');
const ogImage = customOgImage || new URL('/og-image.png', siteUrl).href;

// hreflang URLs for multi-language SEO
const hreflangUrls = {
  ko: new URL(currentPath, siteUrl).href,
  en: new URL(currentPath, siteUrl).href,
  xDefault: new URL(currentPath, siteUrl).href // Default to Korean market
};
---
<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Search Engine Verification (환경변수로 설정) -->
    {import.meta.env.PUBLIC_GOOGLE_SITE_VERIFICATION && (
      <meta name="google-site-verification" content={import.meta.env.PUBLIC_GOOGLE_SITE_VERIFICATION} />
    )}
    {import.meta.env.PUBLIC_NAVER_SITE_VERIFICATION && (
      <meta name="naver-site-verification" content={import.meta.env.PUBLIC_NAVER_SITE_VERIFICATION} />
    )}
    {import.meta.env.PUBLIC_BING_SITE_VERIFICATION && (
      <meta name="msvalidate.01" content={import.meta.env.PUBLIC_BING_SITE_VERIFICATION} />
    )}

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Time2Gather" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={currentUrl} />

    <!-- Hreflang Tags for Multi-language SEO -->
    <link rel="alternate" hreflang="ko" href={hreflangUrls.ko} />
    <link rel="alternate" hreflang="en" href={hreflangUrls.en} />
    <link rel="alternate" hreflang="x-default" href={hreflangUrls.xDefault} />

    <!-- GEO Targeting Meta Tags (Primary: South Korea) -->
    <meta name="geo.region" content="KR" />
    <meta name="geo.placename" content="South Korea" />
    <meta name="geo.position" content="37.5665;126.9780" />
    <meta name="ICBM" content="37.5665, 126.9780" />
    <meta name="DC.language" content={locale} />
    <meta name="content-language" content={locale === 'ko' ? 'ko-KR' : 'en-US'} />
    <meta http-equiv="content-language" content={locale === 'ko' ? 'ko-KR' : 'en-US'} />

    <!-- Open Graph / Facebook / 카카오톡 -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />
    <meta property="og:locale" content={locale === 'ko' ? 'ko_KR' : 'en_US'} />
    <meta property="og:locale:alternate" content={locale === 'ko' ? 'en_US' : 'ko_KR'} />
    <meta property="og:site_name" content="Time2Gather" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@100..900&display=swap" rel="stylesheet" />
    <ClientRouter />
    <slot name="head" />

    <!-- Structured Data (Schema.org) -->
    <StructuredData 
      type={schemaType} 
      eventData={eventData}
      pageData={{ name: title, description }}
    />
  </head>
  <body>
	<Header client:only="react" />
	<div class="responsive-layout">
	  <slot />
	</div>
	<Toast client:only="react" />
	<!-- <ChatBot client:only="react" /> -->
  </body>
</html>

<style>
	/* CSS Reset */
	*,
	*::before,
	*::after {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	html {
		-webkit-text-size-adjust: 100%;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	html,
	body {
		width: 100%;
		/* height: 100%; */
		font-family: "Noto Sans KR", sans-serif;
		font-optical-sizing: auto;
		font-style: normal;
		overflow-x: hidden; /* 모바일에서 좌우 스크롤 방지 */
	}

	body {
		line-height: 1.5;
		position: relative; /* overflow-x: hidden이 동작하도록 */
	}

	img,
	picture,
	video,
	canvas,
	svg {
		display: block;
		max-width: 100%;
	}

	input,
	button,
	textarea,
	select {
		font: inherit;
	}

	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		overflow-wrap: break-word;
	}

	ul,
	ol {
		list-style: none;
	}

	a {
		text-decoration: none;
		color: inherit;
	}

	button {
		background: none;
		border: none;
		cursor: pointer;
	}

	table {
		border-collapse: collapse;
		border-spacing: 0;
	}

	.responsive-layout {
		width: 100%;
		min-width: 320px;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 12px;
		padding-top: 50px;

		@media (min-width: 700px) {
		    padding-top: 0px;
			padding-left: 100px;
			margin-top: 30px;
		}
	}
</style>
